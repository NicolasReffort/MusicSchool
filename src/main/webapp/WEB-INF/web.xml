<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	 	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	 version="3.0">
	<!-- ADRESSE POUR ACCEDER A LA SERVLET -->
	 <welcome-file-list>
		 <welcome-file>accueil</welcome-file>
	 </welcome-file-list>

	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/JSP/erreur.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/JSP/erreur.jsp</location>
	</error-page>

	<!-- Pour avoir une inclusion du JavaServerStandard Library d'office dans les pages .jps -->
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<page-encoding>UTF-8</page-encoding>
			<include-prelude>
				/WEB-INF/JSP/taglibs.jsp
			</include-prelude>		
		</jsp-property-group>
	</jsp-config>			
</web-app>                                                                                                                                  
